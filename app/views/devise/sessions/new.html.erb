<div class="content">
  <div class="content-header" style="background-color: #ececec">

  </div>
  <div class="left-sidebar col-sm-6" style="background-color: #ececec"></div>
  <div class="row animated fadeInUp">
    <div class="col-sm-8">
      <h4 class="section-subtitle"><b>Sign In</b></h4>
      <div class="panel">
        <div class="panel-content">
          <div class="row">
            <div class="col-md-12">
              <div class="panel-body">
                <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }, defaults: { input_html: { class: 'form-control' }}) do |f| %>
                  <div class="form-inputs">
                    <div class="form-group">
                      <label for="email" class="col-sm-3 control-label">Email</label>
                      <div class="col-sm-6">
                          <%= f.input :email, :required => false, :autofocus => true, label: false %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="password" class="col-sm-3 control-label">Password</label>
                      <div class="col-sm-6">
                          <%= f.input :password, :required => false, label: false %>
                      </div>
                    </div>                    
                    <div class='form-group'>
                      <label class="col-sm-3 control-label"></label>
                      <div class="col-sm-6">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" id="user_remember_me" name="user[remember_me]">Remember me
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <br>
                  <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                      <%= f.button :submit, "Sign in", class: 'btn-primary' %>
                      <br />
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
