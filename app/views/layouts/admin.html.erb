<!DOCTYPE html>
<html>
  <head>
    <title>WeLoveMerthyr</title>
    <%= stylesheet_link_tag    "admin", media: "all" %>
    <%= javascript_include_tag "admin" %>
    <%= javascript_include_tag "bootstrap-datepicker" -%>
    <%= csrf_meta_tags %>
  </head>

  <body data-controller="<%= controller_name -%>" data-action="<%= action_name -%>">
    <div id="header" class="fixed">
      <%= render partial: 'layouts/admin/main_nav' -%>
    </div>

    <div id="wrapper" class="container">
      <div id="content" class="clearfix">
        <div class="row-fluid">
          <%- if notice -%>
            <p class="alert alert-dismissable alert-success"><%= notice %></p>
          <%- elsif alert -%>
            <p class="alert alert-dismissable alert-warning"><%= alert %></p>
          <%- end -%>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>