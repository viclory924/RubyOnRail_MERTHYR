<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li><i class="fa fa-columns" aria-hidden="true"></i><a href="#">Pages</a></li>
        <li><a>Show</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <% unless notice.blank? %>
        <p id="notice" class="alert alert-success"><%= notice %></p>
      <% end %>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">            
            <p>
              <b>Title:</b>
              <%= @page.title %>
            </p>

            <p>
              <b>Body:</b>
              <%= @page.body %>
            </p>

            <p>
              <b>Parent:</b>
              <%= @page.parent && @page.parent.slug %>
            </p>

            <p>
              <b>Page template:</b>
              <%= @page.page_template && @page.page_template.slug %>
            </p>

            <p>
              <b>Status:</b>
              <%= @page.status %>
            </p>

            <%= link_to 'Edit', edit_page_path(@page) %> |
            <%= link_to 'Back', pages_path %>
          </div>
        </div>
      </div>
    </div> 
  </div> 
</div>
