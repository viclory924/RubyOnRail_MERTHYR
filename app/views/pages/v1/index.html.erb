<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Pages</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> pages</h4>
      <p> 
        <%= link_to 'New Page', new_page_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Parent</th>
                  <th>Page template</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @pages.each do |page| %>
                  <tr>
                    <td><%= page.title %></td>
                    <td><%= page.parent && page.parent.slug || '-' %></td>
                    <td><%= page.page_template && page.page_template.slug %></td>
                    <td><%= page.status %></td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to page, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_page_path(page), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to page, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @pages -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>