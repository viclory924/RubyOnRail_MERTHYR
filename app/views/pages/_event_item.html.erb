<div class="post-excerpt-horizontal">
  <div class="post-image">
    <div class="overlay primary">
      <div class="link-icon"><i class="fa fa-link"></i></div>
    </div>
    <%= image_tag event_item.image_url(:f_thumb) -%>
  </div>
  <div class="post-content">
    <h3 class="title"><%= link_to event_item.name, public_event_path(event_item) %></h3>
    <div class="post-meta">
      <div class="post-meta-item">
        <div class="icon">
          <i class="fa fa-pencil"></i>
        </div>
        <div class="text">
          <p><%= render_date(event_item) %></p>
        </div>
      </div>
    </div>
  </div>
</div>
