<div id="hero-banner" class="hero-banner-events">
	<div class="overlay"></div>
	<div class="banner-content">
		<div class="content-wrap">
			<div class="row content-padding">
				<div class="columns text-center">
					<h1>Events</h1>
					<p>What's going on in Merthyr Tydfil Town Centre</p>
				</div>
			</div>
		</div>
	</div>
</div>

<section class="content-padding">
	<div class="row small-up-1 medium-up-2 large-up-3 content-padding" data-equalizer data-equalize-on="medium" data-equalize-by-row="true">
    <%- @events.each do |event| -%>
		  <div class="column">
        <div class="card-wrap" data-equalizer>
          <div class="card primary" data-equalizer-watch>
            <a href="<%= public_event_path(event) %>" class="card-image">
              <div class="overlay primary">
                <div class="link-icon"><i class="fa fa-link"></i></div>
              </div>
              <%= image_tag event.image_url(:f_small) -%>
            </a>
            <div class="card-content">
              <a href="<%= public_event_path(event) %>"><h3 class="card-title event"><%= event.name -%></h3></a>
              <div class="post-meta">
                <div class="post-meta-item">
                  <div class="icon"><i class="fa fa-clock-o"></i></div>
                  <div class="text"><p><%= render_date(event) %></p></div>
                </div>
                <div class="post-meta-item">
                  <div class="icon"><i class="fa fa-map-marker"></i></div>
                  <div class="text"><p><%= event.location_name -%></p></div>
                </div>
              </div>
            </div>
            <a href="<%= public_event_path(event) %>" class="card-link">View Event</a>
          </div>
        </div>
      </div>
    <%- end -%>
	</div>
</section>
