<section class="single-listing light-gray-bg content-padding">
  <div class="row">
    <div class="column">
      <ul class="breadcrumbs">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li class="show-for-medium"><a href="<%= public_visiting_path -%>"><span>Visiting</span></a></li>
        <li><a href="#"><span>Map & Guides</span></a></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-9 large-9 column">
      <div class="single-content-wrap">
        <div class="single-content">
          <h1 class="red title_post">Maps & Guides</h1>

          <div>

            <script src="//maps.google.com/maps/api/js?key=AIzaSyAS2tiGZYnoio9bzZ-BuRivI2R6ib9G0Jw&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
            <!--   <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script> -->

            <div class='padding_top_20'>
              <div class="thumbnail">
                <div id="map" style='height:350px;width:100%;'></div>

                <script type="text/javascript">
                   window.onload = function() {
                    <%= render partial: 'shared/gmap_script', locals: { hash: @hash } -%>
                  }
                </script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="small-12 medium-3 large-3 column">
      <div class="single-content-wrap">
        <div class="single-content">
          <h3 class="red"> Select from the below:</h3>

          <div class='white-box'>
    
              <%= form_tag update_guides_map_path, id: 'update-guides-form', remote: true, method: 'get' do -%>
                <%= hidden_field_tag :category, [], name: 'selected_cats[]' -%>

                <%- Business::CATEGORIES.each do |c| -%>
                  <%= check_box_tag :category, c, true, name: 'selected_cats[]', id: "cat_#{c.downcase.parameterize.underscore}", class: 'uniform' -%>
                  <%= label_tag "cat_#{c.downcase.underscore}", c -%>
                  <br />
                <%- end -%>
              <%- end -%>
            </div>

            <div class="" id="download-guides">
              <div class="red">Download a copy of out Town Centre guides</div>
              <br />
              <%= link_to 'Download', '/assets/new-map.pdf', class: 'button', target: '_blank' -%>
            </div>
          </div>
        </div>
      </div>
    </div>

</section>