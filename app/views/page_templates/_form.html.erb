<div class="row animated fadeInUp">
  <div class="col-sm-12">
    <div class="panel">
      <div class="panel-content">
        <div class="row">
          <div class="col-md-12">
            <%= simple_form_for @page_template, html: { class: 'form-horizontal'}, defaults: { input_html: { class: 'form-control' }} do |f| %>
              <div class="form-group">
                <label for="title" class="col-sm-3 control-label">Title<span class="require">*</span></label>
                <div class="col-sm-6">
                  <%= f.input :title, label: false %>
                </div>
              </div>            
              <div class="form-group">
                <label for="body" class="col-sm-3 control-label">Body</label>
                <div class="col-sm-6">
                  <%= f.input :body, as: :text, input_html: { class: 'my_tinymce' }, label: false -%>
                </div>
              </div>            
              <div class="form-group">
                <label for="Layout" class="col-sm-3 control-label">Layout</label>
                <div class="col-sm-6">
                  <%= f.input :layout_name, collection: PageTemplate::LAYOUT_NAMES, include_blank: false, label: false -%>
                </div>
              </div>            
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <%= f.button :submit, class: 'btn-primary' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>