<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Templates</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <%= link_to 'Business-Category Templates', business_category_templates_path -%>
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> page templates</h4>
      <p> 
        <%= link_to 'New Page template', new_page_template_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Body</th>
                  <th>Layout</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @page_templates.each do |page_template| %>
                  <tr>
                    <td><%= page_template.title %></td>
                    <td><%= page_template.body %></td>
                    <td><%= page_template.layout_name %></td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to page_template, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_page_template_path(page_template), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to page_template, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @page_templates -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>