<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Sliders</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> sliders</h4>
      <p> 
        <%= link_to 'New Slider', new_slider_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Header</th>
                  <th>Caption</th>
                  <th>Image</th>
                  <th>Order</th>
                  <th>Visible</th>
                  <th>Button title</th>
                  <th>URL</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @sliders.each do |slider| %>
                  <tr>
                    <td><%= slider.header %></td>
                    <td><%= slider.caption %></td>
                    <td><%= image_tag slider.image_url(:admin_thumb) %></td>
                    <td><%= slider.order %></td>
                    <td><%= slider.visible?? 'Yes' : 'No' %></td>
                    <td><%= slider.button_title %></td>
                    <td><%= slider.url %></td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to slider, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_slider_path(slider), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to slider, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @sliders -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
