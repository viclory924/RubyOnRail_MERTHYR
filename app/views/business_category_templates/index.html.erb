


<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Businesses Category Template</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> business category templates</h4>
      <p> 
        <%= link_to 'New Business category template', new_business_category_template_path %>
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Category</th>
      <th>Body</th>
      <th>Image</th>
  
                  <%- if can?(:edit, Business) -%>
                    <th>Actions</th>
                  <%- end -%>
                </tr>
              </thead>
              <tbody>
    <% @business_category_templates.each do |bct| %>
      <tr>
        <td><%= bct.category %></td>
        <td><%= bct.body %></td>
        <td>
          <%- bct.business_category_template_images.each do |i| -%>
            <%- if i.image.present? -%>
              <%= image_tag i.image_url(:admin_thumb) -%>
              <br />
              <br />
            <%- end -%>
          <%- end -%>
        </td>
        <td>
          <%= link_to 'Show', bct %>
          <%= link_to 'Edit', edit_business_category_template_path(bct) %>
          <%= link_to 'Destroy', bct, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
            </table>
            <%= paginate @business_category_templates -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
