<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Events</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> events</h4>
      <p> 
        <%= link_to 'New Event', new_event_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Starts</th>
                  <th>Ends</th>
                  <th>Location name</th>
                  <th>Location address</th>
                  <th>Latitude</th>
                  <th>Longitude</th>
                  <th>Image</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td><%= event.name %></td>
                    <td><%= event.starts.strftime("%b #{event.starts.day.ordinalize}, %-I:%M%P") %></td>
                    <td><%= event.ends.strftime("%b #{event.ends.day.ordinalize}, %-I:%M%P") %></td>
                    <td><%= event.location_name %></td>
                    <td><%= event.location_address %></td>
                    <td><%= event.lat%></td>
                    <td><%= event.lon%></td>
                    <td><%= image_tag(event.image_url(:admin_thumb)) if event.image.present? %></td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to event, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_event_path(event), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @events -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>