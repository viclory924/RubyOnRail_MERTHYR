<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Downloads</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> downloads</h4>
      <p> 
        <%= link_to 'New Download', new_download_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>File</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @downloads.each do |d| %>
                  <tr>
                    <td><%= d.title %></td>
                    <td><%= d.category %></td>
                    <td> <%= link_to File.basename(d.file.path), d.file.url %> </td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to d, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_download_path(d), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to d, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @downloads -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>