<div class="content">
  <!-- content HEADER -->
  <!-- ========================================================= -->
  <div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
      <ul class="breadcrumbs">
        <li class="active-item"><a href="#">Deals</a></li>
      </ul>
    </div>
  </div>
  <div class="row animated fadeInRight">
    <div class="col-sm-12">
      <h4 class="section-subtitle"><b>Listing</b> deals</h4>
      <p> 
        <%= link_to 'New Deal', new_deal_path %> 
      </p>
      <div class="panel">
        <div class="panel-content">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Image</th>
                  <th>Start date</th>
                  <th>End date</th>
                  <th>Status</th>
                  <th>Business</th>
                  <th>Terms</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @deals.each do |deal| %>
                  <tr>
                    <td><%= deal.title %></td>
                    <td><%= deal.description %></td>
                    <td><%= image_tag deal.image_url(:admin_thumb) if deal.image.present? %></td>
                    <td><%= deal.start_date.strftime("#{deal.start_date.day.ordinalize} %b, %Y") %></td>
                    <td><%= deal.end_date.strftime("#{deal.end_date.day.ordinalize} %b, %Y") %></td>
                    <td><%= deal.status %></td>
                    <td><%= deal.business.name %></td>
                    <td><%= deal.terms %></td>
                    <td>
                      <div class="btn-group btn-group-xs">
                        <%= link_to deal, id: "logo" do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                        <%= link_to edit_deal_path(deal), id: "logo" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to deal, method: :delete, data: { confirm: 'Are you sure?' }, id: "logo" do %>
                          <i class="fa fa-times"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @deals -%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>